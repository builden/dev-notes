{
  "private": true,
  "name": "dev-notes",
  "scripts": {
    "start": "dumi dev",
    "build": "dumi build",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "build:full:style": "postcss src/styles/tailwind.src.css -o src/styles/tailwind.css",
    "build:style": "cross-env NODE_ENV=production postcss src/styles/tailwind.src.css -o src/styles/tailwind.min.css",
    "prebuild": "yarn build:style"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "dumi": "^1.0.16",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.4",
    "tailwindcss": "^1.2.0",
    "yorkie": "^2.0.0",
    "zarm": "^2.1.0",
    "zent": "^8.4.0"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.28",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@umijs/plugin-sass": "^1.1.1",
    "babel-plugin-emotion": "^10.0.33",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "taro-tailwind": "^0.3.0"
  }
}
